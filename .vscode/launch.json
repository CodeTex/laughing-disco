{
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/src/main.py",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Python: Run API server",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "src.api:app",
        "--host",
        "localhost",
        "--port",
        "8000",
        "--log-level",
        "debug",
        "--reload"
      ],
      "envFile": "${workspaceFolder}/.env",
      "justMyCode": true
    }
  ]
}
